<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.mediaplayerproject.controller.CreateAndEditPlaylistController">
   <children>
      <ListView fx:id="allPlaylistsView" layoutX="14.0" layoutY="47.0" onMouseClicked="#plOnMouseClick" prefHeight="300.0" prefWidth="150.0" />
      <ListView fx:id="allMediaView" layoutX="201.0" layoutY="47.0" prefHeight="300.0" prefWidth="150.0" />
      <Button fx:id="searchButton" disable="true" layoutX="351.0" layoutY="14.0" mnemonicParsing="false" onAction="#onButtonClickSearch" text="Search" />
      <TextField fx:id="searchField" layoutX="201.0" layoutY="14.0" promptText="Search all media" />
      <Button fx:id="addItemButton" layoutX="373.0" layoutY="129.0" mnemonicParsing="false" onAction="#onButtonClickAdd" text="-&gt;" />
      <Button fx:id="removeItemButton" layoutX="373.0" layoutY="178.0" mnemonicParsing="false" onAction="#onButtonClickRemove" text="&lt;-" />
      <TextField fx:id="nameOfPlaylist" alignment="CENTER" layoutX="425.0" layoutY="14.0" promptText="Choose a name" />
      <Button fx:id="createButton" layoutX="532.0" layoutY="356.0" mnemonicParsing="false" onAction="#onButtonClickCreate" text="Create" />
      <Button fx:id="deleteButton" layoutX="113.0" layoutY="356.0" mnemonicParsing="false" onAction="#onButtonClickDelete" text="Delete" />
      <ListView fx:id="currentPlaylistView" layoutX="417.0" layoutY="47.0" prefHeight="300.0" prefWidth="166.0" />
      <Label fx:id="playlistName" layoutX="59.0" layoutY="18.0" text="All playlists" />
      <Button fx:id="refreshButton" layoutX="14.0" layoutY="356.0" mnemonicParsing="false" onAction="#onButtonClickRefresh" text="Refresh" />
   </children>
</AnchorPane>
